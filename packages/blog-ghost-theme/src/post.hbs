{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div id="content" class="site-content">
	<main id="main" class="site-main inner">
		<article class="{{post_class}}">
			{{#if feature_image }}
			<div class="post-thumbnail">
				<img src="{{feature_image}}" alt="{{title}}" />
			</div>
			{{/if}}
			<header class="entry-header">
				<h1 class="entry-title">{{title}}</h1>
				<div class="entry-meta">
					{{#primary_author}}<span class="post-author"><a href="{{url}}">{{name}}</a></span>{{/primary_author}}<span class="post-date"><time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></span>
				</div><!-- .entry-meta -->
			</header><!-- .entry-header -->
			<div class="entry-content">
				{{content}}
			</div><!-- .post-content -->
			<footer class="entry-footer">
				{{#if tags}}
				<div class="post-tags">{{tags}}</div>
				{{/if}}
				<div class="share-links">
					<span class="meta-before">Share:</span>
					<a target="_blank" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"><i class="fa-twitter" aria-hidden="true"></i><span class="screen-reader-text">Twitter</span></a>
					<a target="_blank" href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}"><i class="fa-facebook" aria-hidden="true"></i><span class="screen-reader-text">Facebook</span></a>
					<a target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><i class="fa-google-plus" aria-hidden="true"></i><span class="screen-reader-text">Google+</span></a>
				</div>
			</footer><!-- .entry-footer -->
			{{!-- Everything inside the #primary_author tags pulls data from the author --}}
			{{#primary_author}}
			<div class="author-box">
				<div class="author-info">
					{{#if profile_image}}
					<div class="avatar-container">
						<img src="{{profile_image}}" alt="{{name}}" class="avatar" />
					</div>
					{{/if}}
					<div class="author-details">
						<h2 class="author-title">About <a href="{{url}}">{{name}}</a></h2>
						{{#if bio}}
						<p class="author-description">{{bio}}</p>
						{{/if}}
						<div class="author-links">
							{{#if website}}
							<a href="{{website}}" target="_blank"><i class="fa-globe" aria-hidden="true"></i><span class="screen-reader-text">Website</span></a>
							{{/if}}
							{{#if facebook}}
							<a href="{{facebook_url}}" target="_blank"><i class="fa-facebook" aria-hidden="true"></i><span class="screen-reader-text">Facebook</span></a>
							{{/if}}
							{{#if twitter}}
							<a href="{{twitter_url}}" target="_blank"><i class="fa-twitter" aria-hidden="true"></i><span class="screen-reader-text">Twitter</span></a>
							{{/if}}
						</div>
					</div>
				</div><!-- .author-info -->
			</div><!-- .author-box -->
			{{/primary_author}}
		</article><!-- .post -->

		{{!-- Email subscribe form --}}
		{{#if @labs.subscribers}}
		<div class="subscribe-box">
			<div class="subscribe-inside">
				<h2 class="subscribe-box-title">Subscribe to {{@site.title}}</h2>
				<p>Get the latest posts delivered right to your inbox.</p>
				{{subscribe_form form_class="gh-subscribe-form" input_class="gh-subscribe-field" button_class="gh-subscribe-submit" placeholder="Your email address"}}
			</div>
		</div><!-- .subscribe-box -->
		{{/if}}

		{{!-- Previous/next post links --}}
		<nav class="navigation post-navigation">
			<h2 class="screen-reader-text">Post navigation</h2>
			<div class="nav-links">
				{{#prev_post}}
				<div class="nav-previous">
					<a href="{{url}}" class="nav-inside">
						<span class="nav-before">Previous post</span>
						<span class="nav-title">{{title}}</span>
						<span class="nav-meta">{{date format="MMMM DD, YYYY"}}</span>
						{{#if feature_image}}
						<span class="nav-thumb" style="background-image: url({{feature_image}})"></span>
						{{/if}}
					</a>
				</div>
				{{/prev_post}}
				{{#next_post}}
				<div class="nav-next">
					<a href="{{url}}" class="nav-inside">
						<span class="nav-before">Next post</span>
						<span class="nav-title">{{title}}</span>
						<span class="nav-meta">{{date format="MMMM DD, YYYY"}}</span>
						{{#if feature_image}}
						<span class="nav-thumb" style="background-image: url({{feature_image}})"></span>
						{{/if}}
					</a>
				</div>
				{{/next_post}}
			</div><!-- .nav-links -->
		</nav><!-- .post-navigation -->

		{{!-- The tag below includes the theme comments - partials/comments.hbs --}}
		{{> comments}}

	</main><!-- .site-main -->
</div><!-- .site-content -->
{{/post}}
